<tr id="question_list_member_<%= question_list_member.id.to_s %>">
  <td><%= full_name_link(question_list_member.user) %></td>
  <td><%= form_tag(question_list_member_path(question_list_member), 
             :method => "delete",
             :id => 'delete_member_form',
             :remote => true) do %>
<%= image_submit_tag 'black_x_v1.png',
                     :id => "delete_member_#{question_list_member.id.to_s}",
                     :onclick => 'return confirm("Are you sure you want to remove ' +
                     escape_javascript(question_list_member.user.full_name) +
                     ' from this question_list?")' %>
      <% end %>
  </td>
</tr>
